# Development Dockerfile for React application
FROM node:18-alpine

# Install dependencies
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Set Vite to use a different host port to avoid conflicts
ENV VITE_PORT=8080

# Start development server
CMD ["npm", "run", "dev"]